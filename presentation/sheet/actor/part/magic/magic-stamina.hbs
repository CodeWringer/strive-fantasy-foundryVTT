{{!--
viewModel: ViewModel
--}}
<div id="{{viewModel.id}}" class="sheet-block">
  {{!-- Max Magic Stamina --}}
  <div class="flex flex-row flex-middle flex-right">
    {{#> labeledControl viewModel=viewModel.vmMaxMagicStamina localizedIconToolTip=(localize
    "strive-fantasy.character.magic.stamina.maximum") iconClass="ico-brain-limit-solid" cssClass="width-lg" }}
    {{> inputNumberSpinner }}
    {{/labeledControl}}
    {{#> labeledControl viewModel=viewModel.vmMaxMagicStaminaModifier localizedIconToolTip=(localize
    "system.general.modifier.label") iconClass="ico-modifier-solid" cssClass="width-lg" }}
    {{> inputNumberSpinner }}
    {{/labeledControl}}
    <span class="pad-md font-bold">=</span>
    <span class="width-md">
      {{> readOnlyValue viewModel=viewModel.vmModifiedMaxMagicStamina }}
    </span>
  </div>
  {{!-- Current Magic Stamina --}}
  <div class="flex flex-row flex-middle flex-right">
    {{#> labeledControl viewModel=viewModel.vmMagicStamina localizedIconToolTip=(localize
    "strive-fantasy.character.magic.stamina.label") iconClass="ico-brain-solid" cssClass="width-xl" }}
    {{> inputNumberSpinner }}
    {{/labeledControl}}
  </div>
</div>